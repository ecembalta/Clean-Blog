<%- include('partials/_header')-%>
<body>
  <%- include('partials/_navigation')-%>

  <!-- Page Header -->
  <header class="masthead" style="background-image: url('/img/post-bg.jpg')">
    <div class="overlay"></div>
    <div class="container">
      <div class="row">
        <div class="col-lg-8 col-md-10 mx-auto">
          <div class="post-heading">
            <h1><%= post.title %></h1>
            <!-- <h2 class="subheading">Problems look mighty small from 150 miles up</h2> -->
            <span class="meta">Posted by
              <a href="#">Ecem Balta</a>
              <%= post.dateCreated %></span>
          </div>
        </div>
      </div>
    </div>
  </header>

  <!-- Post Content -->
  <article>
    <div class="container">
      <div class="row">
        <div class="col-lg-8 col-md-10 mx-auto">
          <h1><%= post.title %></h1>
          <p><%= post.detail %></p>
          <div class="tm-bg-gray tm-share-box">
            <div class="text-center">
              <a href="/posts/edit/<%= post._id %>" class="btn btn-primary p-2 tm-btn-animate tm-btn-download tm-icon-download"><span>Update Post</span></a>	
              <a href="/posts/<%= post._id %>?_method=DELETE" class="btn btn-danger p-2 tm-btn-animate tm-btn-download tm-icon-download" onclick="return confirm('Are You Sure?')"><span>Delete Post</span></a>	
            </div>	
				
          </div>
        </div>
      </div>
    </div>
    
  </article>

  <hr>

  <%- include('partials/_footer')-%>

  <!-- Custom scripts for this template -->
  <script src="js/clean-blog.min.js"></script>

</body>

</html>
